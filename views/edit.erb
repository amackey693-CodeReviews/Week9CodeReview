
<h3>Edit Definition : <%= @def.definition %> </h3>

<%# UPDATE METHOD %>
<form action="/home/<%= @def.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="redefine">Redefine!</label>
  <input id="redefine" name="redefine" type="text">
  <button type="submit">Update</button>
</form>

<%# DELETE METHOD %>
<form action="/home/<%= @def.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete Definition</button>
</form>

<p><a href="/home">Return to home page!</a></p>